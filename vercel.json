{
    "version": 2,
    "builds": [
        {
            "src": "server/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "client/**",
            "use": "@vercel/static"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/server/index.js"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "/client/$1"
        },
        {
            "source": "/",
            "destination": "/client/index.html"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}